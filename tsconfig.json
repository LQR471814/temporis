{
	"compilerOptions": {
		// General
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"target": "ESNext",
		// Modules
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		// Type Checking & Safety
		"skipLibCheck": true,
		"strict": true,
		"types": [
			"vite/client"
		],
		"paths": {
			"*": [
				"./*"
			],
			"~/*": [
				"./src/*"
			]
		}
	},
	"exclude": [
		"./supabase/**",
		"./node_modules/**",
		"**/*.gen.ts"
	]
}
